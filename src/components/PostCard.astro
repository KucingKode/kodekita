---
import Tags from "./Tags.astro";

interface Props {
	title: string;
	image: string
	tags: string[]
	description: string
	slug: string
}

const { title, description, image, tags, slug } = Astro.props;
---

<div class="card">
	<div class="card__image">
		<img class="card__image__content" src={image} alt="">
	</div>
	<a  href={`/posts/${slug}`}>
		<p class="link card__title">
			{title}
		</p>
	</a>
	<p class="card__description">
		{description}
	</p>
	<Tags tags={tags} />
</div>
<style>
	.card {
		width: 100%;
		max-width: 30rem;
		margin: 1rem;

		.card__image {
			width: 100%;
			aspect-ratio: 16/9;
			max-width: 30rem;
			background-color: var(--secondary-box);
			border-radius: var(--rounded-lg);

		}

		.card__image__content {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

		.card__title {
			font-weight: bold;
			font-size: 1.25rem;
			margin: 0.5rem 0;
		}
		
		.card__description {
			margin-bottom: 0.5rem;
		}
	}
</style>