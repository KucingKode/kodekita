---
import { FaTrophy, FaBars } from "react-icons/fa"
import { Image } from "astro:assets"
import Logo from "@/assets/logo.svg"
import TextLogo from "@/assets/logoText.svg"
---
<header>
    <nav class="container navbar">
        <div class="navbar__wrapper">
            <a href="/">
                <div class="navbar__logo">
                    <Image src={Logo} alt="logo kodekita" />
                    <Image src={TextLogo} alt="logo kodekita" />
                </div>
            </a>

            <div class="navbar__buttons">
                <button class="navbar__button">
                    <FaTrophy size="1.25rem"/>
                </button>
                <button class="navbar__button">
                    <FaBars size="1.25rem"/>
                </button>
            </div>
        </div>
    </nav>
</header>
<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        background-color: var(--bg);
        z-index: 10;
        width: 100vw;

		.navbar__wrapper {
			display: flex;
			width: 100%;
			justify-content: space-between;
		}

		.navbar__logo img {
			margin-right: 0.3rem;
		}

		.navbar__buttons {
			display: flex;
			flex-direction: row;
		}

		.navbar__button {
			margin-left: 1rem
		}
	}
</style>